@{
    
}
<style>
    .Successcircle {
        padding: 23px 10px 10px 15px;
        font-size: 75px;
        color: white;
        border-radius: 50%;
        height: 115px;
        width: 115px;
        background-color: #28a745 !important;
    }
</style>
<div class="container container-fluid mt-5">
    @if (ViewBag.PostType == "JobPosting")
    {

        <div class="row text-center">
            <div class="col-md-12">
                <div class="m-4">
                    <i class="fa fa-check Successcircle" aria-hidden="true"></i>
                </div>
            </div>
            <div class="col-md-12 font-weight-bold" style="font-size:25px;">
                <p>Job Posted Successfully</p>
            </div>
        </div>
        <div class="row text-center m-4 p-3" role="alert">
            <div class="col-md-3"></div>
            <div class="col-md-6 alert alert-success">
                <p class="font-weight-bold"><i class="fa fa-check" aria-hidden="true"></i> Thank you! Job has been posted successfully.</p>
                @if (ViewBag.PostypeBy == "Admin")
                {
                    <p class="font-weight-bold">Click here to post more jobs</p><a href="@Url.Action("JobCreateByAdmin", "Job")" class="btn btn-primary">Post Jobs</a>
                }
                else
                {
                    <p class="font-weight-bold">Click here to post more jobs</p><a href="@Url.Action("Create", "Job")" class="btn btn-primary">Post Jobs</a>
                }

            </div>
        </div>
    }
    else if (ViewBag.PostType == "JobApply")
    {
        <div class="row text-center">
            <div class="col-md-12">
                <div class="m-4">
                    <i class="fa fa-check Successcircle" aria-hidden="true"></i>
                </div>
            </div>
            <div class="col-md-12 font-weight-bold" style="font-size:25px;">
                <p>Successfully Applied!</p>
            </div>
        </div>
        <div class="row text-center m-4 p-3" role="alert">
            <div class="col-md-3"></div>
            <div class="col-md-6 alert alert-success">
                <p class="font-weight-bold"><i class="fa fa-check" aria-hidden="true"></i> Thank you! Job has been Applied successfully.</p>
                <p class="font-weight-bold">Click here to Check for more jobs.</p><a href="@Url.Action("index", "Job")" class="btn btn-danger p-3">Search jobs</a>
            </div>
        </div>
    }

</div>