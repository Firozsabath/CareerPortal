@model CudJobUI.ViewModels.StudentPersonalview
@{
    ViewData["Title"] = "StudentPersonal";
    Layout = null;
}

<div class="container">
    <div class="container-fluid bg-transparent blue">
        <h3>Student Profile</h3>
    </div>
    <hr />
    <form asp-action="StudentPersonal" asp-route-id ="@Model.StudentPersonal.StudentID" onsubmit="return jQueryAjaxPost(this,'MyProfilePersonal');">
        <div class="card mb-3">
            <div class="card-header" style="color: #d5202a;font-weight:bold;">
                Personal Details
            </div>
            <div class="card-body">                
                    <div class="outer_div mb-3">
                        <fieldset>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="StudentPersonal.Objective" class="control-label"></label>
                                        <textarea asp-for="StudentPersonal.Objective" class="form-control" maxlength="150" rows="4"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="StudentPersonal.FirstName" class="control-label"></label>
                                        <input asp-for="StudentPersonal.FirstName" class="form-control" />
                                        <span asp-validation-for="StudentPersonal.FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="StudentPersonal.LastName" class="control-label"></label>
                                        <input asp-for="StudentPersonal.LastName" class="form-control" />
                                        <span asp-validation-for="StudentPersonal.LastName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label asp-for="StudentPersonal.EmailID" class="control-label"></label>
                                        <input asp-for="StudentPersonal.EmailID" class="form-control" />
                                        <span asp-validation-for="StudentPersonal.EmailID" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label asp-for="StudentPersonal.Gender" class="control-label"></label>
                                        <input asp-for="StudentPersonal.Gender" class="form-control" />
                                        <span asp-validation-for="StudentPersonal.Gender" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label asp-for="StudentPersonal.DateOfBirth" class="control-label"></label>
                                        <input type="date" asp-for="StudentPersonal.DateOfBirth" class="form-control" />
                                        <span asp-validation-for="StudentPersonal.DateOfBirth" class="text-danger"></span>
                                    </div>
                                </div>
                                <div style="display:none;">
                                    <div class="form-group">
                                        <label asp-for="StudentPersonal.MobileNumber" class="control-label"></label>
                                        <input asp-for="StudentPersonal.MobileNumber" class="form-control" />
                                        <span asp-validation-for="StudentPersonal.MobileNumber" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label asp-for="StudentAddress.State" class="control-label"></label>
                                        <input asp-for="StudentAddress.State" class="form-control" required />
                                        <div class="invalid-feedback">State is Required.</div>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label asp-for="StudentAddress.CountryID" class="control-label"></label>
                                        <select asp-for="StudentAddress.CountryID" required class="form-control" asp-items="@(new SelectList(ViewBag.message, "CountryID", "Description"))"></select>
                                        <div class="invalid-feedback">Country is Required.</div>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label asp-for="StudentPersonal.ProgramID" class="control-label"></label>
                                        <select asp-for="StudentPersonal.ProgramID" required class="form-control" asp-items="@(new SelectList(ViewBag.Programs, "ProgramID", "ProgramName"))"></select>
                                        <span asp-validation-for="StudentPersonal.ProgramID" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label asp-for="StudentAddress.City" class="control-label"></label>
                                        <input asp-for="StudentAddress.City" class="form-control" required />
                                        <div class="invalid-feedback">City is Required.</div>
                                    </div>
                                </div>
                            </div>
                            @*<div class="row">                               
                                <div class="col-12 col-md-6 col-lg-6">
                                    <label asp-for="StudentPersonal.HskillID" class="control-label"></label>                                    
                                    <select asp-for="StudentPersonal.HskillID" required class="form-control" asp-items="@(new SelectList(ViewBag.Hskills, "HskillID", "HardSkills"))"></select>
                                </div>
                                <div class="col-12 col-md-6 col-lg-6">
                                    <label asp-for="StudentPersonal.SskillID" class="control-label"></label>                                   
                                    <select asp-for="StudentPersonal.SskillID" required class="form-control" asp-items="@(new SelectList(ViewBag.Sskills, "SskillID", "SoftSkills"))"></select>
                                </div>
                            </div>*@
                            <div style="display:none;">
                                <div class="form-group">
                                    <label asp-for="StudentAddress.AddressID" class="control-label"></label>
                                    <input asp-for="StudentAddress.AddressID" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="StudentPersonal.StudentID" class="control-label"></label>
                                    <input asp-for="StudentPersonal.StudentID" class="form-control" />
                                </div>
                                <input asp-for="StudentPersonal.profileImgpath" class="form-control" />
                                <input asp-for="StudentPersonal.Resumepath" class="form-control" />
                            </div>
                        </fieldset>
                    </div>
               
            </div>
        </div>       

        <button type="submit" class="btn btn-danger float-right mt-3"> Save Personal Info </button>
    </form>
</div>


