@model IList<CudJobUI.ViewModels.Awards>
@{
    ViewData["Title"] = "EditAwards";
    Layout = null;
}

<div class="container">
    <div class="container-fluid bg-transparent blue">
        <h3>Edit Awards</h3>
    </div>
    <form asp-action="EditAwards" asp-route-id ="@Model[0].StudentID" onsubmit="return jQueryAjaxPost(this,'MyprofileAwards');">
        <div class="card mb-3">
            <div class="card-header" style="color: #d5202a;font-weight:bold;">
                Award Details
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="outer_div">
                        <div class="row">
                            <div class="col-lg-6">
                                <label asp-for="@Model[i].AwardName" class="control-label"></label>
                                <input asp-for="@Model[i].AwardName" class="form-control rssOrganisation" />
                            </div>
                            <div class="col-lg-6">
                                <label asp-for="@Model[i].AwardDate" class="control-label"></label>
                                <input type="date" asp-for="@Model[i].AwardDate" class="form-control rssMembRole" />
                            </div>
                        </div>
                        <div style="display:none;">
                            <div class="form-group">
                                <label asp-for="@Model[i].StudentID" class="control-label"></label>
                                <input asp-for="@Model[i].StudentID" class="form-control" />
                                <span asp-validation-for="@Model[i].StudentID" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model[i].AwardID" class="control-label"></label>
                                <input asp-for="@Model[i].AwardID" class="form-control" />
                                <span asp-validation-for="@Model[i].AwardID" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                }
                <button type="submit" class="btn btn-danger float-right mt-3"> Save Awards </button>
            </div>
        </div>
    </form>
</div>


