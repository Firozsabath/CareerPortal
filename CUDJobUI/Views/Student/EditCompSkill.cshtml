@model CudJobUI.ViewModels.StudentComputerSkills
@{
    ViewData["Title"] = "EditComputerSkills";
    Layout = "";
}
<div class="container">
    <form asp-action="EditCompSkill" asp-route-id="@Model.StudentID" onsubmit="return jQueryAjaxPost(this,'MyprofileEducation');">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col col-12">
                        <div>
                            <textarea asp-for="ComputerSkill" class="form-control rssInstitution mytextarea"></textarea>
                            <input type="hidden" asp-for="StudentCsID" />
                            <input type="hidden" asp-for="StudentID" />
                            <button type="submit" class="btn btn-danger float-right mt-3"> Save Skills </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
