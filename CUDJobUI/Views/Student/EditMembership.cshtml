@model IList<CudJobUI.ViewModels.Memberships>
@{
    ViewData["Title"] = "EditMembership";
    Layout = null;
}
<div class="container">
    <div class="container-fluid bg-transparent blue">
        <h3>Edit Memberships</h3>
    </div>
    <form asp-action="EditMembership" asp-route-id ="@Model[0].StudentID" onsubmit="return jQueryAjaxPost(this,'MyProfileMembership');">
        <div class="card mb-3">
            <div class="card-header" style="color: #d5202a;font-weight:bold;">
                Projects Details
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="outer_div">
                        <div class="row">
                            <div class="col-lg-6">
                                <label asp-for="@Model[i].Organisation" class="control-label"></label>
                                <input asp-for="@Model[i].Organisation" class="form-control rssOrganisation" />
                            </div>
                            <div class="col-lg-6">
                                <label asp-for="@Model[i].Role" class="control-label"></label>
                                <input asp-for="@Model[i].Role" class="form-control rssMembRole" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <label asp-for="@Model[i].StartDate" class="control-label"></label>
                                <input type="date" asp-for="@Model[i].StartDate" class="form-control rssMembStartDate" />
                            </div>
                            <div class="col-lg-6">
                                <label asp-for="@Model[i].EndDate" class="control-label"></label>
                                <input type="date" asp-for="@Model[i].EndDate" class="form-control rssMembEndDate" />
                            </div>
                        </div>
                        <div style="display:none;">
                            <div class="form-group">
                                <label asp-for="@Model[i].StudentID" class="control-label"></label>
                                <input asp-for="@Model[i].StudentID" class="form-control" />
                                <span asp-validation-for="@Model[i].StudentID" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model[i].MembershipID" class="control-label"></label>
                                <input asp-for="@Model[i].MembershipID" class="form-control" />
                                <span asp-validation-for="@Model[i].MembershipID" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                }
                <button type="submit" class="btn btn-danger float-right mt-3"> Save Memberships </button>
            </div>
        </div>
    </form>
</div>

