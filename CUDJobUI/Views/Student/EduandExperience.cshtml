@model IList<CudJobUI.ViewModels.StudentEducation>
@{
    ViewData["Title"] = "EduandExperience";
    Layout = null;
}

<div class="container">
    <div class="container-fluid bg-transparent blue">
        <h3>Student Profile</h3>
    </div>
    <hr />
    <form asp-action="EduandExperience" asp-route-id ="@Model[0].StudentID" onsubmit="return jQueryAjaxPost(this, 'MyprofileEducation');">
        <div class="card mb-3">
            <div class="card-header" style="color: #d5202a;font-weight:bold;">
                Educatiobnal Details
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="outer_div mb-3">
                        <fieldset>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="@Model[i].Institution" class="control-label"></label>
                                        <input asp-for="@Model[i].Institution" class="form-control" />
                                        <span asp-validation-for="@Model[i].Institution" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="@Model[i].Degree" class="control-label"></label>
                                        <input asp-for="@Model[i].Degree" class="form-control" />
                                        <span asp-validation-for="@Model[i].Degree" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="@Model[i].Major" class="control-label"></label>
                                        <input asp-for="@Model[i].Major" class="form-control" />
                                        <span asp-validation-for="@Model[i].Major" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label asp-for="@Model[i].StartDate" class="control-label"></label>
                                        <input type="date" asp-for="@Model[i].StartDate" class="form-control" />
                                        <span asp-validation-for="@Model[i].StartDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label asp-for="@Model[i].CompletionDate" class="control-label"></label>
                                        <input type="date" asp-for="@Model[i].CompletionDate" class="form-control" />
                                        <span asp-validation-for="@Model[i].CompletionDate" class="text-danger"></span>
                                    </div>                                    
                                </div>
                                <div style="display:none;">
                                    <div class="form-group">
                                        <label asp-for="@Model[i].StudentID" class="control-label"></label>
                                        <input asp-for="@Model[i].StudentID" class="form-control" />
                                        <span asp-validation-for="@Model[i].StudentID" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="@Model[i].EducationId" class="control-label"></label>
                                        <input asp-for="@Model[i].EducationId" class="form-control" />
                                        <span asp-validation-for="@Model[i].EducationId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>                                                   
                        </fieldset>
                    </div>
                }
            </div>
        </div>       

        <button type="submit" class="btn btn-danger float-right mt-3"> Save Education </button>
    </form>
</div>


