@model CudJobUI.ViewModels.StudentAssets

@{
    ViewData["Title"] = "StudentAssets";
}

<div class="container">
    <div class="container-fluid bg-transparent blue">
        <h3>Memberships</h3>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="StudentAssets">
                <div class="card mb-3">
                    <div class="card-header" style="color: #d5202a;font-weight:bold;">
                        <div class="row">
                            <div class="col-lg-3">
                                <p>Projects</p>
                            </div>
                            <div class="col-lg-9">
                                <p><button type="button" class="btn btn-info float-right" id="Btn_AddProjects">Add</button></p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="project_wrapper outer_div mb-3">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="projects[0].Tittle" class="control-label"></label>
                                        <input asp-for="projects[0].Tittle" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="projects[0].Organisation" class="control-label"></label>
                                        <input asp-for="projects[0].Organisation" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="projects[0].Description" class="control-label"></label>
                                        <input asp-for="projects[0].Description" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="projects[0].Startdate" class="control-label"></label>
                                        <input asp-for="projects[0].Startdate" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="projects[0].Enddate" class="control-label"></label>
                                        <input asp-for="projects[0].Enddate" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="projects[0].Role" class="control-label"></label>
                                        <input asp-for="projects[0].Role" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="projects[0].Outcome" class="control-label"></label>
                                        <input asp-for="projects[0].Outcome" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="projects[0].Links" class="control-label"></label>
                                        <input asp-for="projects[0].Links" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <label asp-for="projects[0].Attachment" class="control-label"></label>
                                    <input asp-for="projects[0].Attachment" class="form-control" />
                                </div>
                                <div class="col-lg-6"></div>
                            </div>
                        </div>
                        <div class="project_wrapper1"></div>
                    </div>
                </div>
                <div class="card mb-3">
                    <div class="card-header" style="color: #d5202a;font-weight:bold;">
                        <div class="row">
                            <div class="col-lg-3">
                                <p>Memberships</p>
                            </div>
                            <div class="col-lg-9"></div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="Membership_wrapper outer_div mb-3">
                            <div class="row">
                                <div class="col-lg-6">
                                    <label asp-for="Memberships[0].Organisation" class="control-label"></label>
                                    <input asp-for="Memberships[0].Organisation" class="form-control" />
                                </div>
                                <div class="col-lg-6">
                                    <label asp-for="Memberships[0].Role" class="control-label"></label>
                                    <input asp-for="Memberships[0].Role" class="form-control" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <label asp-for="Memberships[0].StartDate" class="control-label"></label>
                                    <input asp-for="Memberships[0].StartDate" class="form-control" />
                                </div>
                                <div class="col-lg-6">
                                    <label asp-for="Memberships[0].EndDate" class="control-label"></label>
                                    <input asp-for="Memberships[0].EndDate" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-3">
                    <div class="card-header" style="color: #d5202a;font-weight:bold;">
                        <div class="row">
                            <div class="col-lg-3">
                                <p>Awards</p>
                            </div>
                            <div class="col-lg-9">

                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="Award_Wrapper outer_div mb-3">
                            <div class="row">
                                <div class="col-lg-6">
                                    <label asp-for="Awards[0].AwardName" class="control-label"></label>
                                    <input asp-for="Awards[0].AwardName" class="form-control" />
                                </div>
                                <div class="col-lg-6">
                                    <label asp-for="Awards[0].AwardDate" class="control-label"></label>
                                    <input asp-for="Awards[0].AwardDate" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

